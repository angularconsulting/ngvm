{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": ["src/**/*", "_post_build.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "lib": [
    "es2015"
  ]
}
